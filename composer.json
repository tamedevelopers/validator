{
    "name": "tamedevelopers/validator",
    "type": "library",
    "description": "PHP Form Validator is a small no-depencies library for PHP codes.",
    "keywords": ["php form validator", "form validator", "form", "php forms", "php", "forms", "easy validation"],
    "homepage": "https://github.com/tamedevelopers/validator",
    "license": "MIT",
    "authors": [
        {
            "name": "Tame Developers", 
            "email": "tamedevelopers@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "tamedevelopers/support": "^5.0"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Tamedevelopers\\Validator\\": "src/"
        },
        "classmap": ["src/*"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tamedevelopers\\Validator\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "tamedevelopers/support": true
        }
    }
}
